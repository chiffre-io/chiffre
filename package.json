  "scripts": {
    "clean": "run-s clean:crypto clean:api clean:api-types clean:client clean:self",
    "clean:self": "rm -rf ./node_modules",
    "clean:crypto": "yarn workspace @chiffre/crypto run clean",
    "clean:api": "yarn workspace @chiffre/api run clean",
    "clean:api-types": "yarn workspace @chiffre/api-types run clean",
    "clean:client": "yarn workspace @chiffre/client run clean",
    "ci": "run-s ci:crypto ci:api ci:api-types ci:client",
    "ci:crypto": "yarn workspace @chiffre/crypto run ci",
    "ci:api": "yarn workspace @chiffre/api run ci",
    "ci:api-types": "yarn workspace @chiffre/api-types run ci",
    "ci:client": "yarn workspace @chiffre/client run ci"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.0-beta"
  }
