{
  "name": "chiffre",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "dev": "yarn wsrun -m --no-prefix dev",
    "dev:start": "./scripts/dev-start.sh",
    "dev:stop": "./scripts/dev-stop.sh",
    "clean": "yarn wsrun -m clean && rm -rf ./node_modules",
    "build": "yarn wsrun -mt build",
    "test:unit": "yarn wsrun -mt test",
    "test:e2e": "yarn wsrun -mt e2e:test",
    "build:services:api": "yarn wsrun -srp @chiffre/api -c build",
    "build:services:push": "yarn wsrun -srp @chiffre/push -c build",
    "ci": "run-s build test:unit test:e2e",
    "install": "echo 'Use CC_POST_BUILD_HOOK to build the appropriate service'"
  },
  "devDependencies": {
    "@types/jest": "^24.9.0",
    "jest": "^25.1.0",
    "jest-extended": "^0.11.4",
    "lerna": "^3.20.2",
    "npm-run-all": "^4.1.5",
    "surge": "^0.21.3",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.0-beta",
    "wsrun": "^5.2.0"
  }
}
