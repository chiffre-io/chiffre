{
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "dev": "yarn wsrun -m --no-prefix dev",
    "dev:start": "./scripts/dev-start.sh",
    "dev:stop": "./scripts/dev-stop.sh",
    "clean": "yarn wsrun -m clean && rm -rf ./node_modules",
    "build": "yarn wsrun -mt build",
    "test:unit": "yarn wsrun -mt test",
    "test:e2e": "yarn wsrun -mt e2e:test",
    "build:services:api": "yarn wsrun -msrp @chiffre/api -c build",
    "build:services:push": "yarn wsrun -msrp @chiffre/push -c build",
    "ci": "run-s build test:unit test:e2e",
    "install": "echo 'Use CC_POST_BUILD_HOOK to build the appropriate service'"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^24.9.0",
    "commitlint": "^8.3.5",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "jest-extended": "^0.11.4",
    "npm-run-all": "^4.1.5",
    "surge": "^0.21.3",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.0-beta",
    "wsrun": "^5.2.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "build",
          "chore",
          "ci",
          "clean",
          "doc",
          "feat",
          "fix",
          "perf",
          "ref",
          "revert",
          "style",
          "test"
        ]
      ],
      "subject-case": [
        0,
        "always",
        "sentence-case"
      ],
      "body-leading-blank": [
        2,
        "always",
        true
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
