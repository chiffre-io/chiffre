  "scripts": {
    "clean": "run-s clean:crypto-base clean:crypto-client clean:api clean:api-types clean:client clean:self",
    "clean:self": "rm -rf ./node_modules",
    "clean:crypto-base": "yarn workspace @chiffre/crypto-base run clean",
    "clean:crypto-client": "yarn workspace @chiffre/crypto-client run clean",
    "clean:api": "yarn workspace @chiffre/api run clean",
    "clean:api-types": "yarn workspace @chiffre/api-types run clean",
    "clean:client": "yarn workspace @chiffre/client run clean",
    "build": "run-s build:crypto-base build:crypto-client build:api build:client build:client-react build:web",
    "build:crypto-base": "yarn workspace @chiffre/crypto-base run build",
    "build:crypto-client": "yarn workspace @chiffre/crypto-client run build",
    "build:api": "yarn workspace @chiffre/api run build",
    "build:client": "yarn workspace @chiffre/client run build",
    "build:client-react": "yarn workspace @chiffre/client-react run build",
    "build:web": "yarn workspace @chiffre/web run build",
    "ci": "run-s ci:crypto-base ci:crypto-client ci:api ci:client",
    "ci:crypto-base": "yarn workspace @chiffre/crypto-base run ci",
    "ci:crypto-client": "yarn workspace @chiffre/crypto-client run ci",
    "ci:api": "yarn workspace @chiffre/api run ci",
    "ci:client": "yarn workspace @chiffre/client run ci"
  },
  "devDependencies": {
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "npm-run-all": "^4.1.5",
