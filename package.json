{
  "name": "chiffre-mvp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "tsnode": "ts-node --project ./tsconfig.server.json -r tsconfig-paths/register",
    "dev": "yarn tsnode ./src/server/server.ts",
    "build": "next build",
    "build:emitter": "parcel build -d ./public -o emitter.js ./src/emitter/index.ts",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "start": "NODE_ENV=production yarn tsnode ./src/server/server.ts",
    "clean": "rm -rf ./out ./.next",
    "export": "next export",
    "install": "yarn build",
    "deploy": "surge -p ./out -d https://chiffre.surge.sh",
    "release": "yarn clean && yarn build && yarn export && yarn deploy",
    "knex": "yarn tsnode ./node_modules/.bin/knex",
    "migrate:make": "yarn knex migrate:make",
    "migrate:up": "yarn knex migrate:up",
    "seed:make": "yarn knex seed:make",
    "seed:run": "yarn knex seed:run",
    "demo:serve": "serve ./demo",
    "db:reset": "./scripts/stop-db.sh && rm -rf .db && ./scripts/start-db.sh",
    "db:setup": "yarn migrate:up && yarn seed:run",
    "cloak": "yarn tsnode ./src/cli/cloak.ts",
    "analyze": "ANALYZE=true next build"
  },
  "dependencies": {
    "@chakra-ui/core": "^0.5.1",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "@stablelib/base64": "^0.7.2",
    "@stablelib/hex": "^0.5.0",
    "@stablelib/utf8": "^0.10.1",
    "@zeit/next-source-maps": "^0.0.3",
    "axios": "^0.19.0",
    "base32-decode": "^1.0.0",
    "base32-encode": "^1.1.1",
    "commander": "^4.0.1",
    "cron": "^1.7.2",
    "emotion-theming": "^10.0.19",
    "env-alias": "^1.0.0",
    "formik": "^2.0.8",
    "hibp": "^8.0.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.3",
    "nanoid": "^2.1.7",
    "next": "9.1.4",
    "next-connect": "^0.5.1",
    "next-cookies": "^2.0.3",
    "otplib": "^12.0.0-1",
    "pg": "^7.14.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-qr-svg": "^2.2.1",
    "react-use": "^13.10.1",
    "secure-remote-password": "^0.3.1",
    "session-keystore": "^0.4.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "timeago.js": "^4.0.1",
    "tweetnacl": "^1.0.1",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^9.1.4",
    "@types/cron": "^1.7.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^12.12.14",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/zxcvbn": "^4.4.0",
    "dotenv": "^8.2.0",
    "jest": "^24.9.0",
    "node-webcrypto-ossl": "^1.0.48",
    "parcel-bundler": "^1.12.4",
    "serve": "^11.2.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.3"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/$1"
    }
  },
  "browser": {
    "jsonwebtoken": false,
    "knex": false,
    "cron": false,
    "next-cookies": false
  }
}
