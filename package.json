{
  "name": "chiffre-mvp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "ts-node --project tsconfig.server.json ./src/server/server.ts",
    "build": "next build",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "start": "NODE_ENV=production ts-node --project tsconfig.server.json ./src/server/server.ts",
    "clean": "rm -rf ./out ./.next",
    "export": "next export",
    "deploy": "surge -p ./out -d https://chiffre.surge.sh",
    "release": "yarn clean && yarn build && yarn export && yarn deploy",
    "migrate:make": "ts-node --project ./tsconfig.server.json ./node_modules/.bin/knex migrate:make",
    "migrate:up": "ts-node --project ./tsconfig.server.json ./node_modules/.bin/knex migrate:up",
    "seed:make": "ts-node --project ./tsconfig.server.json ./node_modules/.bin/knex seed:make",
    "seed:run": "ts-node --project ./tsconfig.server.json ./node_modules/.bin/knex seed:run",
    "cloak": "ts-node --project ./tsconfig.server.json ./src/cli/cloak"
  },
  "dependencies": {
    "@chakra-ui/core": "^0.4.1",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "@stablelib/base64": "^0.7.2",
    "@stablelib/hex": "^0.5.0",
    "@stablelib/utf8": "^0.10.1",
    "@zeit/next-source-maps": "^0.0.3",
    "axios": "^0.19.0",
    "base32-decode": "^1.0.0",
    "base32-encode": "^1.1.1",
    "commander": "^4.0.1",
    "cron": "^1.7.2",
    "emotion-theming": "^10.0.19",
    "env-alias": "^0.3.1",
    "formik": "^2.0.4",
    "hibp": "^8.0.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.20.2",
    "next": "9.1.3",
    "next-connect": "^0.5.0",
    "otplib": "^12.0.0-1",
    "pg": "^7.14.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-use": "^13.8.0",
    "secure-remote-password": "^0.3.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "timeago.js": "^4.0.1",
    "tweetnacl": "^1.0.1",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@types/cron": "^1.7.1",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/node": "^12.12.8",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/zxcvbn": "^4.4.0",
    "dotenv": "^8.2.0",
    "jest": "^24.9.0",
    "node-webcrypto-ossl": "^1.0.48",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "browser": {
    "jsonwebtoken": false,
    "knex": false,
    "cron": false
  }
}
