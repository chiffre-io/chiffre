    "@stablelib/utf8": "^0.10.1",
    "axios": "^0.19.0",
    "emotion-theming": "^10.0.19",
    "express": "^4.17.1",
    "hibp": "^8.0.0",
    "next": "9.1.3",
    "next-connect": "^0.5.0",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-use": "^13.8.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "tweetnacl": "^1.0.1",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.8",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/zxcvbn": "^4.4.0",
    "dotenv": "^8.2.0",
    "jest": "^24.9.0",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
