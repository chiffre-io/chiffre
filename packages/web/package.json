{
  "name": "@chiffre/web",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "build:emitter": "parcel build -d ./public -o emitter.js ./src/emitter/index.ts",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "start": "NODE_ENV=production yarn tsnode ./src/server/server.ts",
    "clean": "rm -rf ./out ./.next",
    "export": "next export",
    "deploy": "surge -p ./out -d https://chiffre.surge.sh",
    "release": "yarn clean && yarn build && yarn export && yarn deploy",
    "demo:serve": "serve ./demo",
    "analyze": "ANALYZE=true next build"
  },
  "dependencies": {
    "@chakra-ui/core": "^0.5.2",
    "@chiffre/api": "^0.0.1",
    "@chiffre/crypto": "^0.0.1",
    "@emotion/core": "^10.0.22",
    "@emotion/styled": "^10.0.23",
    "@zeit/next-source-maps": "^0.0.3",
    "axios": "^0.19.0",
    "emotion-theming": "^10.0.19",
    "formik": "2.0.6",
    "hibp": "^8.0.0",
    "http-status-codes": "^1.4.0",
    "nanoid": "^2.1.8",
    "next": "9.1.5",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-qr-svg": "^2.2.1",
    "react-table": "7.0.0-beta.23",
    "react-use": "^13.10.1",
    "session-keystore": "^0.5.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "timeago.js": "^4.0.1",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^9.1.5",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^24.0.23",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^12.12.17",
    "@types/pino": "^5.15.0",
    "@types/react-table": "^6.8.5",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "@types/zxcvbn": "^4.4.0",
    "dotenv": "^8.2.0",
    "jest": "^24.9.0",
    "null-loader": "^3.0.0",
    "parcel-bundler": "^1.12.4",
    "serve": "^11.2.0",
    "ts-jest": "^24.2.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/$1"
    }
  }
}
